{
  "name": "mcp-hosting-platform",
  "version": "1.0.0",
  "description": "A platform for hosting and managing MCP servers",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "nodemon src/backend/server.js",
    "client": "cd src/frontend && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd src/frontend && npm run build",
    "install:all": "npm install && cd src/frontend && npm install",
    "setup": "npm run install:all && npm run build",
    "postinstall": "npm run setup"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "MCP",
    "Model Context Protocol",
    "Claude",
    "AI"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
} 